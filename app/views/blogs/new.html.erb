<h1>
  <%= link_to fa_icon("arrow-left"), blogs_path %>
  <%= @text %>
</h1>


<%= form_for Blog.new do |f| %>

  <div class="form-group">
    <%=f.label :content %>
    <%= f.text_area :content, class: "form-control", style: "height: 500px;" %>
  </div>
  <div class="form-group">
    <%=f.label :tags %>
    <%= f.text_field :tags, class: "form-control" %>
  </div>
  <%= f.submit "Post", class: "btn btn-default"%>

<% end %>
