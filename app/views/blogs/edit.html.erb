<h1>
  <%= link_to fa_icon("arrow-left"), blog_path(@blog) %>
  <%= @text %>
</h1>

<%= form_for @blog do |f| %>

  <div class="form-group">
    <%=f.label :content %>
    <%= f.text_area :content, class: "form-control", style: "height: 500px;" %>
  </div>
  <div class="form-group">
    <%=f.label :tags %>
    <%= f.text_field :tags, class: "form-control" %>
  </div>
  <%= f.submit "Update Blog", class: "btn btn-default"%>

<% end %>
