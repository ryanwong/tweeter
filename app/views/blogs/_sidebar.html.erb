<%= content_for :sidebar_content do %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Filter
      </h3>
    </div>
    <div class="panel-body">
      <%= form_tag blogs_path, method: :get do %>
       <div class="form-group">
         <%= select_tag :filter, options_for_select(Blog.all_tags.map{|t| [t.titleize, t]}, params[:filter]), include_blank: true, class: "form-control" %>
         <br \>
         <%= submit_tag 'Filter', class: "btn btn-default" %>
         </div>
       </div>
     <% end %>
    </div>
  </div>
<% end %>
