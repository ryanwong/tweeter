<h1><%= @text %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User Name</th>
      <th>Email Address</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_formatted_s(:long_ordinal) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'sidebar'%>

<div class="text-center">
  <%= paginate @users, theme:"twitter-bootstrap-3"%>
</div>
